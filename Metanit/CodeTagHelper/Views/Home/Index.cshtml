@addTagHelper *, CodeTagHelper
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/highlightjs/vs.css" />


<pre hljs-lang="cs">
        public static class Name
        {
            public static void ToUpperFirst(this String str)
            {
                string buffer = str;
                for (int i = 0; i & ltbuffer.Length; i++)
                {
                    if (buffer[i - 1] == " ")
                        buffer[i].ToUpper();
                }
                str = buffer;
            }
        }
</pre>









